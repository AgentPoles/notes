						android:text="Upgrade"
						android:layout_marginTop="5dp"
						android:layout_marginLeft="3dp"
						android:textSize="15sp"
						android:textStyle="normal"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"/>
